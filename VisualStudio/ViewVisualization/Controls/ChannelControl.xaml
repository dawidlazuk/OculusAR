<UserControl x:Class="ViewVisualization.Controls.ChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewVisualization.Controls"
             xmlns:converters="clr-namespace:ViewVisualization.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="OneChannelControl">
    <UserControl.Resources>
        <converters:BitmapToBitmapSourceConverter x:Key="BitmapSourceConverter"/>
    </UserControl.Resources>
    <Grid Name="ChannelGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Image Grid.Column="0"
               Source="{Binding Path=Image, Converter={StaticResource BitmapSourceConverter}}"/>
        <ComboBox Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding Path=CameraIndexes}"
                  SelectedItem="{Binding Path=CameraIndex, Mode=TwoWay}"/>
    </Grid>
</UserControl>
